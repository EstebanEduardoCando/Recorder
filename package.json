{
  "name": "recorder",
  "version": "0.1.0",
  "description": "Aplicaci√≥n local para grabar y transcribir reuniones usando Whisper",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "npx vite",
    "dev:electron": "npx wait-on http://localhost:5173 && npx electron .",
    "build": "npx tsc && npx vite build",
    "build:electron": "npx electron-builder",
    "lint": "npx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx vite preview",
    "type-check": "npx tsc --noEmit",
    "test": "node tests/run-all-tests.js",
    "test:devices": "node tests/test-audio-devices.js",
    "test:recording": "node tests/test-recording.js",
    "test:service": "node tests/test-audiorecorder-service.js",
    "test:transcription": "node tests/test-transcription.js",
    "test:transcription-local": "node tests/test-transcription-local.js"
  },
  "keywords": [
    "recorder",
    "transcription",
    "whisper",
    "meetings",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@fugood/whisper.node": "^1.0.5",
    "better-sqlite3": "^11.0.0",
    "electron-store": "^8.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-record-lpcm16": "^1.0.1",
    "nodejs-whisper": "^0.2.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "typescript": "^5.5.3",
    "vite": "^5.4.20",
    "vite-plugin-electron": "^0.28.7",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.recorder.app",
    "productName": "Recorder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
